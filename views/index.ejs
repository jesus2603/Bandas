<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bandas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h1 class="text-center">Lista de Bandas</h1>
    <a href="/bands/new" class="btn btn-primary mb-3">➕ Agregar Banda</a>
    
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Estilo</th>
                <th>Miembros</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% bands.forEach(band => { %>
                <tr>
                    <td><img src="/uploads/<%= band.image %>" width="80" class="rounded"></td>
                    <td><%= band.name %></td>
                    <td><%= band.style %></td>
                    <td><%= band.members %></td>
                    <td>
                        <a href="/bands/edit/<%= band._id %>" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <form action="/bands/<%= band._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">🗑 Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
